<div class="col-md-10 col-md-offset-1">
<h1>Listing meetings</h1>
<%= link_to 'New Meeting', new_meeting_path, class: "btn btn-primary" %>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-hover">

  <thead>
    <tr>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Organiser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.description %></td>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= meeting.location %></td>
        <td><%= meeting.organiser_name %></td>
        <td><%= link_to 'Show', meeting %></td>
        <% if(meeting.organiser_id == @current_user.id) %>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
</div>

