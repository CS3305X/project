<div class="row">
<div class="col-md-8 col-md-offset-2">
<div>
  <h1>User Directory</h1>
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                  <th>Last name</th>
                  <th>First name</th>
                  <th>Student ID</th>
                  <th>Email</th>
                </tr>
            </thead>
        
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                  <th>Last name</th>
                  <th>First name</th>
                  <th>Staff ID</th>
                  <th>Email</th>
                </tr>
            </thead>
        
          <tbody>
            <% @staff.each do |staff| %>
              <tr>
                <td><%= staff.last_name %></td>
                <td><%= staff.first_name %></td>
                <td><%= staff.id %></td>
                <td><%= staff.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>
</div>
</div>