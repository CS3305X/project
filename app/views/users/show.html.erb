<div class="col-md-6 col-md-offset-3">
<p id="notice"><%= notice %></p>

<h1><%= " Welcome #{@user.first_name} #{@user.last_name}" %></h1>

  <div>
    <p>
      <strong>User type:</strong>
      <%= @user.user_type_id %>
    </p>
    
    <p>
      <strong>User ID Number:</strong>
      <%= @user.id %>
    </p>
    
    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>
    
    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>
    
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    
    <p>
      <strong>Phone num:</strong>
      <%= @user.phone_num %>
    </p>
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
  </div>
  <div class ="">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3 class="panel-title"></b>Notifications</h3></div>
      <div class="panel-body">
        <table class="table table-hover">
          <tbody>
            <% check_notifications(@user.id).each do |notification| %>
              <tr>
                <td><%= link_to "#{notification.message.truncate(70)}", meetings_url %></td></td>
                <td><%= link_to 'X', notification, method: :delete%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
